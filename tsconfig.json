{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "./build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2015"],
    "types": ["jest"],
    "allowJs": true
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}